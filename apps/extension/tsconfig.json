{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": ["@tsconfig/strictest/tsconfig.json"],
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["es2023", "DOM"],
    "moduleResolution": "Bundler",
    "noUnusedLocals": false,
    "types": ["chrome"],
    "paths": {
      "@environments/*": ["./src/environments/*"]
    }
  },
  "references": [
    { "path": "../../libraries/shared" },
    { "path": "../../libraries/web-ui" }
  ],
  "include": ["./src/**/*"]
}
