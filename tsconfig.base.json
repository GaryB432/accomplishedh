{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@tsconfig/strictest/tsconfig.json"
  ],
  "compilerOptions": {
    "composite": true,
    "noUnusedLocals": false,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true,
    "declaration": true,
    "module": "NodeNext",
    "target": "ES2022",
    "lib": ["ES2022"]
  },
  "exclude": ["**/*.spec.ts", "dist"],
  "include": []
}
